<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/tou" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_icn"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="45px"
        android:layout_marginTop="120px"
        fresco:placeholderImage="@mipmap/touxiang"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="90px"
        fresco:roundingBorderColor="#000000"
        fresco:roundingBorderWidth="1px" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_marginTop="155px"
        android:layout_toRightOf="@+id/user_icn"
        android:text="用户名"
        android:textColor="#ffffff"
        android:textSize="40px" />

    <TextView
        android:id="@+id/user_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_name"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="20px"
        android:text="13813575369"
        android:textColor="#ffffff"
        android:textSize="26px" />

    <ImageView
        android:id="@+id/zankai"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45px"
        android:layout_marginTop="155px"
        android:src="@mipmap/zankaid" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/autoLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:layout_below="@+id/img"
        android:background="#ffffff">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#ffd300"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/price"
                android:layout_toRightOf="@+id/price"
                android:text="元"
                android:textColor="#ffd300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                android:text="我的钱包"
                android:textColor="#464646"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:background="#c8c8c8" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#ffd300"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/num"
                android:layout_toRightOf="@+id/num"
                android:text="个"
                android:textColor="#ffd300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num"
                android:text="全部订单"
                android:textColor="#464646"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:background="#c8c8c8" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ffd300"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/msg"
                android:layout_toRightOf="@+id/msg"
                android:text="条"
                android:textColor="#ffd300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg"
                android:text="未读信息"
                android:textColor="#464646"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/geren"
        android:layout_width="720px"
        android:layout_height="90px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/autoLinearLayout"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:src="@mipmap/edt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/edt"
            android:textColor="#464646"
            android:textSize="28px"
            android:text="个人资料" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:src="@mipmap/zankai" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/xihuan"
        android:layout_width="720px"
        android:layout_height="90px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/geren"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/xh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:src="@mipmap/xihuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/xh"
            android:textColor="#464646"
            android:textSize="28px"
            android:text="喜欢的店" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:src="@mipmap/zankai" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/xihuan"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="#c8c8c8" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/you"
        android:layout_width="720px"
        android:layout_height="90px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tt"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/youh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:src="@mipmap/youhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/youh"
            android:textColor="#464646"
            android:textSize="28px"
            android:text="优惠券" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:src="@mipmap/zankai" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/shezi"
        android:layout_width="720px"
        android:layout_height="90px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/you"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:src="@mipmap/shezhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45px"
            android:layout_toRightOf="@+id/sz"
            android:textColor="#464646"
            android:textSize="28px"
            android:text="设置" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:src="@mipmap/zankai" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
