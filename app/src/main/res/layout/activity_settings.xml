<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="example.com.myexample.activity.SettingsActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@mipmap/tou"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginLeft="45px"
            android:src="@mipmap/back1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="720px"
        android:layout_height="400px"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_search">

        <TextView
            android:id="@+id/gr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24px"
            android:text="通用"
            android:textSize="28px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/qingc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gr">

            <TextView
                android:id="@+id/tou_icn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="24px"
                android:text="清除图片缓存"
                android:textColor="#464646"
                android:textSize="32px" />

            <TextView
                android:id="@+id/cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:text="0MB" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tt"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/qingc"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="#c8c8c8" />

        <TextView
            android:id="@+id/ttt"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/mippg"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:background="#c8c8c8" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ttt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="24px"
                android:text="信息推送"
                android:textColor="#464646"
                android:textSize="32px" />

            <ImageView
                android:id="@+id/tuisong"
                android:layout_width="120px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:background="@mipmap/kaiguan"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/mippg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="24px"
                android:text="非WIFI下图片质量"
                android:textColor="#464646"
                android:textSize="30px" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:layout_marginRight="15px"
                android:layout_toLeftOf="@+id/xia"
                android:text="普通"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xia"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:src="@mipmap/zhanx" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="720px"
        android:layout_height="300px"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_search">

        <TextView
            android:id="@+id/bd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24px"
            android:text="开发"
            android:textSize="32px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/xiazai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bd"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24px"
                android:text="自动下载更新包"
                android:textColor="#464646"
                android:textSize="32px" />

            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15px"
                android:layout_toLeftOf="@+id/xx"
                android:text="仅WI-FI网络"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/xx"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:src="@mipmap/zhanx" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/ttww"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/xiazai"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:background="#c8c8c8" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/versions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ttww"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/guanyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="20px"
                android:text="关于黄小二"
                android:textColor="#464646"
                android:textSize="32px" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45px"
                android:src="@mipmap/zankai" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
