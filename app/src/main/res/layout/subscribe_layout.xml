<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@mipmap/jianbian">

        <ImageView
            android:id="@+id/diz"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginTop="120px"
            android:layout_marginLeft="45px"
            android:src="@mipmap/dingwei" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:layout_toRightOf="@+id/diz"
            android:layout_marginTop="130px"
            android:text="地址"
            android:textColor="#ffffff"
            android:textSize="40px" />

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/address"
            android:src="@mipmap/xiala" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/sousuo"
            android:layout_width="660px"
            android:layout_height="70px"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"
            android:layout_marginTop="200px"
            android:background="@drawable/shape_sou"
            android:gravity="center">

            <ImageView
                android:id="@+id/sous"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:src="@mipmap/sous" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/sous"
                android:text="大家圣诞节"
                android:textColor="#999999"
                android:textSize="26px" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kk"
        android:layout_marginLeft="45px"
        android:layout_marginTop="15px"
        android:text="附近商家"
        android:textColor="#999999"
        android:textSize="26px" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/srlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kk"
        android:layout_marginTop="50px"/>
</com.zhy.autolayout.AutoRelativeLayout>
