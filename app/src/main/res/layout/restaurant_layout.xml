<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:gravity="center_vertical"
    android:background="#ffffff">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/class_img"
        android:layout_width="155px"
        android:layout_height="155px"
        android:layout_marginLeft="25px"
        fresco:roundedCornerRadius="10px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/class_img">

        <TextView
            android:id="@+id/shangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家"
            android:textColor="#464646"
            android:textSize="32px" />

        <TextView
            android:id="@+id/yueshou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shangjia"
            android:layout_marginTop="30px"
            android:text="月售"
            android:textColor="#464646"
            android:textSize="26px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/quality_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shangjia"
            android:layout_marginLeft="15px"
            android:layout_marginTop="35px"
            android:layout_toRightOf="@+id/yueshou"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shangjia"
            android:layout_marginLeft="10px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@+id/quality_score"
            android:textColor="#ff6400"
            android:textSize="26px" />

        <TextView
            android:id="@+id/renjun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yueshou"
            android:layout_marginTop="12px"
            android:text="人均"
            android:textColor="#999999"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/xih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45px"
            android:src="@mipmap/xih2" />

        <TextView
            android:id="@+id/juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/yueshou"
            android:layout_marginRight="45px"
            android:layout_marginTop="12px"
            android:text="1.2km"
            android:textColor="#999999"
            android:textSize="20px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
