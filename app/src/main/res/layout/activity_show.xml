<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="example.com.myexample.activity.ShowActivity">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/autoRelativeLayout"></com.zhy.autolayout.AutoFrameLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/autoRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:clipChildren="false"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home"
                android:layout_width="80px"
                android:layout_height="match_parent"
                android:background="@drawable/tab_homepage"
                android:button="@null"
                android:layout_marginRight="150px"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/sao"
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_gravity="bottom"
                android:background="@mipmap/bott"
                android:button="@null"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/my"
                android:layout_width="80px"
                android:layout_height="match_parent"
                android:background="@drawable/tab_mine"
                android:button="@null"
                android:layout_marginLeft="150px"
                android:gravity="center" />

        </RadioGroup>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
